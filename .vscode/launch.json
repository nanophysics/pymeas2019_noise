    "version": "0.2.0",
    "configurations": [
        {
            "name": "Lint",
            "type": "python",
            "request": "launch",
            "module": "pylint",
            "cwd": "${workspaceFolder}",
            "args": ["--rcfile=${workspaceFolder}/.pylintrc", "--verbose", "*.py", "measurement-actual"],
            "console": "integratedTerminal"
        },
        {
            "name": "Black",
            "type": "python",
            "request": "launch",
            "module": "black",
            "cwd": "${workspaceFolder}",
            "args": ["--config", "${workspaceFolder}/.blackconfig.yaml", "*.py", "measurement-actual/*.py"],
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Aktuelle Datei",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: run_0_plot_interactive_wx.py",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/measurement-actual/run_0_plot_interactive_wx.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: run_0_measure.py",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/measurement-actual/run_0_measure.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: run_measure_synthetic.py",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/run_measure_synthetic.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: run_0_plot_interactive.py",
            "type": "python",
            "request": "launch",
            "justMyCode": false,
            "program": "${workspaceFolder}/measurement-actual/run_0_plot_interactive.py",
            "console": "integratedTerminal"
        }
    ]
}